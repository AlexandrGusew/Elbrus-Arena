@tailwind base;
@tailwind components;
@tailwind utilities;

/* RF Online Cyberpunk Styles */
@layer base {
  body {
    background: #05070a;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(0, 150, 255, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(0, 255, 150, 0.06) 0%, transparent 40%),
      repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 200, 255, 0.03) 2px, rgba(0, 200, 255, 0.03) 4px);
    font-family: 'Courier New', Monaco, monospace;
    color: #eae6dd;
    min-height: 100vh;
    position: relative;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background:
      linear-gradient(90deg, transparent 49%, rgba(0, 200, 255, 0.05) 49%, rgba(0, 200, 255, 0.05) 51%, transparent 51%),
      linear-gradient(0deg, transparent 49%, rgba(0, 200, 255, 0.05) 49%, rgba(0, 200, 255, 0.05) 51%, transparent 51%);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 0;
  }

  #root {
    @apply min-h-screen relative z-10;
  }
}

/* RF Online Custom Components */
@layer components {
  /* Buttons */
  .rf-btn {
    @apply px-6 py-3 font-bold uppercase tracking-wider cursor-pointer transition-all duration-300 border-2 relative;
    font-family: 'Courier New', monospace;
    clip-path: polygon(12px 0, 100% 0, 100% calc(100% - 12px), calc(100% - 12px) 100%, 0 100%, 0 12px);
  }

  .rf-btn-primary {
    @apply rf-btn;
    background: rgba(0, 255, 150, 0.15);
    border-color: #00ff96;
    color: #00ff96;
  }

  .rf-btn-primary:hover {
    background: rgba(0, 255, 150, 0.3);
    box-shadow: 0 0 25px rgba(0, 255, 150, 0.6);
  }

  .rf-btn-secondary {
    @apply rf-btn;
    background: rgba(0, 200, 255, 0.1);
    border-color: #00c8ff;
    color: #00c8ff;
  }

  .rf-btn-secondary:hover {
    background: rgba(0, 200, 255, 0.2);
    box-shadow: 0 0 25px rgba(0, 200, 255, 0.5);
  }

  .rf-btn-danger {
    @apply rf-btn;
    background: rgba(255, 50, 50, 0.1);
    border-color: #ff3232;
    color: #ff6464;
  }

  .rf-btn-danger:hover {
    background: rgba(255, 50, 50, 0.2);
    box-shadow: 0 0 25px rgba(255, 50, 50, 0.5);
  }

  /* Cards */
  .rf-card {
    background: linear-gradient(135deg, rgba(5, 10, 15, 0.95) 0%, rgba(10, 15, 20, 0.98) 100%);
    border: 2px solid #00c8ff;
    box-shadow:
      0 0 30px rgba(0, 200, 255, 0.3),
      inset 0 0 50px rgba(0, 200, 255, 0.05),
      0 20px 60px rgba(0, 0, 0, 0.8);
    clip-path: polygon(20px 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%, 0 20px);
    position: relative;
  }

  .rf-card::before {
    content: '';
    position: absolute;
    inset: 8px;
    border: 1px solid rgba(0, 200, 255, 0.3);
    clip-path: polygon(18px 0, 100% 0, 100% calc(100% - 18px), calc(100% - 18px) 100%, 0 100%, 0 18px);
    pointer-events: none;
  }

  /* Panel */
  .rf-panel {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid #00c8ff;
    border-left: 3px solid #00ff96;
    padding: 1.5rem;
    clip-path: polygon(15px 0, 100% 0, 100% 100%, 0 100%, 0 15px);
  }

  /* Title */
  .rf-title {
    font-family: 'Courier New', monospace;
    font-size: 1.8rem;
    font-weight: 700;
    color: #00ff96;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    text-shadow:
      0 0 10px rgba(0, 255, 150, 0.8),
      0 0 20px rgba(0, 255, 150, 0.5);
  }

  .rf-subtitle {
    font-family: 'Courier New', monospace;
    font-size: 1.2rem;
    font-weight: 700;
    color: #00c8ff;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    text-shadow: 0 0 10px rgba(0, 200, 255, 0.8);
  }

  /* Input */
  .rf-input {
    @apply w-full px-4 py-3;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid #00c8ff;
    border-bottom: 2px solid #00c8ff;
    color: #00ff96;
    font-family: 'Courier New', monospace;
    clip-path: polygon(10px 0, 100% 0, 100% 100%, 0 100%, 0 10px);
    transition: all 0.3s ease;
  }

  .rf-input:focus {
    outline: none;
    border-color: #00ff96;
    box-shadow: 0 0 20px rgba(0, 255, 150, 0.4);
  }

  .rf-input::placeholder {
    color: #6ec8e0;
  }

  /* Corner decorations */
  .rf-corner {
    position: absolute;
    width: 40px;
    height: 40px;
    border: 2px solid #00ff96;
    z-index: 2;
  }

  .rf-corner.top-left {
    top: -2px;
    left: -2px;
    border-right: none;
    border-bottom: none;
    box-shadow: 0 0 15px rgba(0, 255, 150, 0.5);
  }

  .rf-corner.top-right {
    top: -2px;
    right: -2px;
    border-left: none;
    border-bottom: none;
    box-shadow: 0 0 15px rgba(0, 255, 150, 0.5);
  }

  .rf-corner.bottom-left {
    bottom: -2px;
    left: -2px;
    border-right: none;
    border-top: none;
    box-shadow: 0 0 15px rgba(0, 255, 150, 0.5);
  }

  .rf-corner.bottom-right {
    bottom: -2px;
    right: -2px;
    border-left: none;
    border-top: none;
    box-shadow: 0 0 15px rgba(0, 255, 150, 0.5);
  }

  /* Data row */
  .rf-data-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: rgba(0, 200, 255, 0.05);
    border-left: 2px solid #00c8ff;
    font-family: 'Courier New', monospace;
  }

  .rf-data-label {
    font-size: 0.8rem;
    color: #6ec8e0;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .rf-data-value {
    font-size: 1rem;
    color: #00ff96;
    font-weight: 700;
  }

  /* Avatar */
  .rf-avatar {
    width: 180px;
    height: 180px;
    margin: 0 auto 1.5rem;
    background:
      linear-gradient(135deg, rgba(0, 200, 255, 0.1), rgba(0, 255, 150, 0.1)),
      radial-gradient(circle at 30% 30%, rgba(0, 200, 255, 0.2), transparent);
    border: 3px solid #00c8ff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 6rem;
    position: relative;
    clip-path: polygon(30px 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%, 0 30px);
    box-shadow:
      0 0 30px rgba(0, 200, 255, 0.5),
      inset 0 0 30px rgba(0, 200, 255, 0.2);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 30px rgba(0, 200, 255, 0.5), inset 0 0 30px rgba(0, 200, 255, 0.2);
    }
    50% {
      box-shadow: 0 0 40px rgba(0, 200, 255, 0.8), inset 0 0 40px rgba(0, 200, 255, 0.3);
    }
  }

  @keyframes glitch {
    0%, 90%, 100% { transform: translateX(0); }
    92% { transform: translateX(-2px); }
    94% { transform: translateX(2px); }
    96% { transform: translateX(-1px); }
  }
}